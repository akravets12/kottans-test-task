!!!
%html
  %head
    %meta{:content => 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}
    %meta{:charset => 'utf-8'}
    %meta{:content => 'ie=edge', 'http-equiv' => 'x-ua-compatible'}
    %title SafeMessaging
    %meta{:content => '', :name => 'description'}
    %meta{:content => 'width=device-width, initial-scale=1', :name => 'viewport'}
    %link{:href => "/css/lib/bootstrap.min.css", :rel => 'stylesheet'}
  %body
    .main-wrapper
      .row
        .inner-wraper.col-xs-12.col-md-10.col-lg-4.col-lg-offset-4
          %form{ method: "POST", action: "/"}
            %h1 Enter Your message
            %textarea.form-control{ name: "message" }
            %p
              Destroy:
              %label.radio-inline{for: "instant-destroy"} after visit
              %input{name: "destroy_delay", value:"0", id:"instant-destroy", type:'radio', checked:'checked'}
              %label.radio-inline{for: "destroy-in-hour"} in an hour
              %input{name: "destroy_delay", value:"1", id:"destroy-in-hour", type:'radio'}
            %button.btn.btn-success.form-control Submit
          -if !message.nil? && message.valid?
            %h3 Here is a link for your message:
            %input.disabled.form-control{ name:"link", value:"http://#{host}/message/#{message.link}"}
